@using MudBlazor
@inherits LayoutComponentBase

@inject IRivalCoinsApp App

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudLink Href="https://rivalcoins.money/top-battles" Target="_blank" Style="color:white;"><img src="icon-512.png" width=48 height=48 /></MudLink>
        <MudSpacer />
        <MudText Align=Align.Center>Rival Coins Play Wallet <br/> v0.1.0 Beta | Network: @this.App.Network</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/RivalCoins" Target="_blank" />
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}